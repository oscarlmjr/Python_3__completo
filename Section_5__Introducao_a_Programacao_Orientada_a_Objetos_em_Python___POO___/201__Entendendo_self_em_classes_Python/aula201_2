# Entendedo self em classes Python
# Classe - Molde (geralmente sem dados)
# Instância da class (objeto) - Tem os dados
# Uma classe pode gerar várias instâncias
# Na classe o self é a própria instância.

class Carro:
    def __init__(abc, nome):   # self - convenção (referencia a própria instância)
        abc.nome = nome

    def acelerar(efg):
        print(f'{efg.nome} está acelerando...')


string = 'Luiz'
print(string.upper())

fusca = Carro('Fusca')
print(fusca.nome)
fusca.acelerar()

celta = Carro('Celta')
print(celta.nome)
celta.acelerar()
